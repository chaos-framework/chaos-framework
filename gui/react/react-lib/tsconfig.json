{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",
    "module": "ES2020",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "**/test/*"]
}
