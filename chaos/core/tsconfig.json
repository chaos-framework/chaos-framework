{
  "compilerOptions": {
    "target": "es2020",
    "experimentalDecorators": true,
    "module": "es2020",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["node"],
    "sourceMap": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "**/test/*"]
}
