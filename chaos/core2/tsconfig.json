{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["node"],
    "sourceMap": true
  },
  "ts-node": {
		"transpileOnly": true,
		"files": true,
		"experimentalResolver": true
	},
  "include": ["src"],
  "exclude": ["node_modules", "**/test/*", "**/*.spec.ts"]
}
